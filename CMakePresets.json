{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 15,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "linux-debug",
      "displayName": "Linux Debug",
      "description": "Debug build for Linux",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "BUILD_TESTING": "ON",
        "ENABLE_COVERAGE": "ON",
        "ENABLE_ASAN": "OFF",
        "ENABLE_UBSAN": "OFF"
      },
      "environment": {
        "CC": "gcc",
        "CXX": "g++"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": ["Linux"]
        }
      }
    },
    {
      "name": "linux-release",
      "displayName": "Linux Release",
      "description": "Release build for Linux",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "BUILD_TESTING": "OFF",
        "ENABLE_LTO": "ON"
      },
      "environment": {
        "CC": "gcc",
        "CXX": "g++"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": ["Linux"]
        }
      }
    },
    {
      "name": "linux-clang-debug",
      "displayName": "Linux Clang Debug",
      "description": "Debug build for Linux with Clang",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-clang-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "BUILD_TESTING": "ON",
        "ENABLE_ASAN": "ON",
        "ENABLE_UBSAN": "ON"
      },
      "environment": {
        "CC": "clang",
        "CXX": "clang++",
        "CFLAGS": "-fcolor-diagnostics",
        "CXXFLAGS": "-fcolor-diagnostics"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": ["Linux"]
        }
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "linux-debug",
      "configuration": "Debug",
      "targets": ["all", "test"]
    },
    {
      "name": "release",
      "configurePreset": "linux-release",
      "configuration": "Release",
      "targets": ["all", "package"]
    },
    {
      "name": "clang-debug",
      "configurePreset": "linux-clang-debug",
      "configuration": "Debug",
      "targets": ["all", "test"]
    }
  ],
  "testPresets": [
    {
      "name": "test-debug",
      "configurePreset": "linux-debug",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "test-clang-debug",
      "configurePreset": "linux-clang-debug",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      }
    }
  ],
  "vendor": {
    "microsoft.com/VisualStudioSettings/CMake/1.0": {
      "autoReload": {
        "enabled": true
      }
    }
  }
}
