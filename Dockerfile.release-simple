FROM ubuntu:22.04

# Installer les dépendances nécessaires
RUN apt-get update && apt-get install -y \
    curl \
    jq \
    && rm -rf /var/lib/apt/lists/*

# Créer le répertoire de travail
WORKDIR /workspace

# Copier les fichiers nécessaires
COPY scripts/publish-simple.sh /usr/local/bin/publish-simple.sh
COPY GITHUB_RELEASE_v1.0.0.md /workspace/
COPY CHANGELOG.md /workspace/

RUN chmod +x /usr/local/bin/publish-simple.sh

# Point d'entrée
ENTRYPOINT ["/usr/local/bin/publish-simple.sh"]
